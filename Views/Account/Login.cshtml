@{
    ViewData["Title"] = "Iniciar sesion";
}

<div class="container bg-light p-4 col-sm-6">
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <p>Ya has iniciado sesion. Seras redirigido al inicio en unos segundos...</p>
        <script>
            setTimeout(function () {
                window.location.href = '@Url.Action("Index", "Home")';
            }, 4000)
        </script>
    }
    else
    {
        <div class="text-danger">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </div>
        <h2>Iniciar sesion</h2>
        <form method="post">
            <div class="form-group">
                <label for="email">Correo electronico</label>
                <input id="email" name="email" required type="text" class="form-control">
            </div>
            <div class="form-group">
                <label for="password">Contrase√±a</label>
                <input id="password" name="password" required type="text" class="form-control">
            </div>
            <div class="form-group my-3 d-flex justify-content-around">
                <button type="submit"  class="btn btn-primary">Iniciar sesion</button>
                <a asp-action="Register" class="btn btn-outline-primary">Registrarse</a>
            </div>
        </form>
        <br>
        
    }
</div>