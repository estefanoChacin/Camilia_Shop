@model ANNIE_SHOP.Models.ViewModel.ProcederConCompraViewModel
@{
    ViewData["Title"] = "Index";
}
<h2>Carrito de compras</h2>
@if (Model.Carrito.Items.Count == 0)
{
    <div class="alert alert-info">
        <p>No hay productos en el carrito</p>
        <a href="/Home" class="btn btn-primary">Seguir comprando</a>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Cantdad</th>
                    <th>Precio</th>
                    <th>Subtotal</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Carrito.Items)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>
                            @if (item.Cantidad < 1)
                            {
                                <form>
                                    <div class="alert alert-danger" role="alert">
                                        <i class="fas fa exclamation-circle"> Agotado</i>
                                        <input type="hidden" name="id" value="@item.ProdcutoId">
                                    </div>
                                </form>
                            }
                            else
                            {
                                <form asp-action="ActualizarCantidad" asp-controller="Carrito" method="post">
                                    <div class="input-group input-group-sm">
                                        <input type="number" name="cantidad" class="form-control" min="1"
                                            max="@item.Producto.Stock" value="@item.Cantidad">
                                        <div class="input-group-append">
                                            <button type="submit" class="btn btn-primary"><i class="fas fa-sync-alt"></i></button>
                                        </div>
                                    </div>
                                    <input type="hidden" name="id" value="@item.ProdcutoId">
                                </form>
                            }
                        </td>
                        <td>@item.Precio</td>
                        <td>@item.Subtotal.ToString("C")</td>
                        <td>
                            <form asp-action="EliminarProducto" asp-controller="Carrito" method="post">
                                <button type="submit" class="btn btn-primary"><i class="fas fa-trash-alt"></i></button>
                                <input type="hidden" name="id" value="@item.ProdcutoId">
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <td colspan="3"></td>
                <td class="font-weight-bold">Total:</td>
                <td class="font-weight-bold">@Model.Carrito.Total.ToString("C")</td>
            </tfoot>
        </table>
    </div>
    <div class="text-right">
        <form asp-controller="Carrito" asp-action="VaciarCarrito" method="post">
            <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Vaciar Carrito</button>
        </form>
    </div>
    <div class="text-left my-4">
        @if (User.Identity != null && User.Identity.IsAuthenticated)
        {
            <form asp-controller="Carrito" asp-action="ProcederConCompra" method="post">
                <h3>Direcciones de envio</h3>
                @if (Model.Direcciones.Count == 0)
                {
                    <P>no se encontraron direcciones de envio para su usuario. Acceda a su perfil para agregar una direccion</P>
                }
                else
                {
                    @foreach (var direccion in Model.Direcciones)
                    {
                        <div class="form-check">
                            <input type="radio" name="direccionIdSeleccionada" class="form-check-input" value="@direccion.DireccionId"
                                id="@direccion.DireccionId" for="@direccion.DireccionId" required />

                            <label class="form-check-label" for="@direccion.DireccionId">
                                @direccion.Address, @direccion.Ciudad, @direccion.Departamento, @direccion.CodigoPostal
                            </label>
                        </div>
                    }
                    <input type="hidden" name="montoTotal" value="@Model.Carrito.Total">
                    <button type="submit" class="btn btn-primary btn-lg my-4"><i class="fab fa-paypal"></i> Proceder con la compra</button>
                }
            </form>
        }
        else
        {
            <a class="btn btn-primary" asp-action="Login" asp-controller="Account">Iniciar session para proceder con la
                compra</a>
        }
    </div>
}